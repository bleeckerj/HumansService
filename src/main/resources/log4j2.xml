<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{%d{ISO8601} %-5p (%c{2}.java:%M:%line) %c{1}  - %m%n}"/>
    </Console>
    <RollingFile name="RollingFile" fileName="/Users/julian/Documents/workspace/HumansService/logs/app.log"
                 filePattern="humans_test_$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log">
      <PatternLayout>
        <Pattern>%highlight{%d{ISO8601} %-5p (%c{2}.java:%M:%line) %c{1}  - %m%n}</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="10 MB"/>
        <DefaultRolloverStrategy max="2"/>
      </Policies>
    </RollingFile>
    <File name="TEMP" fileName="~/Documents/workspace/HumansService/logs/humans_test.log">
      <PatternLayout pattern="%highlight{%d{ISO8601} %-5p (%c{2}.java:%M:%line) %c{1}  - %m%n}"/>
    </File>
    <Async name="ASYNC" includeLocation="true">
      <AppenderRef ref="TEMP"/>
      <AppenderRef ref="CONSOLE"/>
      <AppenderRef ref="RollingFile"/>
    </Async>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="ASYNC"/>
    </Root>
  </Loggers>
</Configuration>